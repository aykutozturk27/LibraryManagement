@model Personal
@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-controller="Personal" asp-action="Add" method="post">
    <div class="form-group row">
        <label asp-for="FirstName" class="col-sm-4 form-label">Adı</label>
        <div class="col-sm-8">
            <input type="text" class="form-control" asp-for="FirstName" placeholder="Adı" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mt-3">
        <label asp-for="LastName" class="col-sm-4 form-label">Soyadı</label>
        <div class="col-sm-8">
            <input type="text" class="form-control" asp-for="LastName" placeholder="Soyadı" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mt-3">
        <label asp-for="IdentityNumber" class="col-sm-4 form-label">TC No</label>
        <div class="col-sm-8">
            <input type="text" class="form-control" asp-for="IdentityNumber" placeholder="TC No" />
            <span asp-validation-for="IdentityNumber" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row mt-3">
        <label asp-for="PhoneNumber" class="col-sm-4 form-label">Telefon</label>
        <div class="col-sm-8">
            <input type="text" class="form-control" asp-for="PhoneNumber" placeholder="Telefon" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group mt-3 d-grid gap-2 col-4 mx-auto">
        <button type="submit" class="btn btn-primary" id="btnList">Ekle</button>
    </div>
</form>